.side-bar
  .side-bar__user-name
    .side-bar__top-items
      .side-bar__name
        = current_user.name

      .side-bar__icon-list
        = link_to new_group_path, class: "side-bar__icon" do
          = icon('far', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: "side-bar__icon" do
          = icon('fa', 'cog')
          %span<>
        
  .Group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class: "Group-a" do
          .group-name
            = group.name
          .group-message
            = group.show_last_message